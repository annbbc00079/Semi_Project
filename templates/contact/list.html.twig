
{% extends 'adbase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div calss="container-fluid ">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4>List Contact Page</h4>
          <!--<h6 class="m-0 font-wight-bold text-primary" > Admin Profile
            <a href="{{path('app_contact')}}" class="btn btn-primary">ADD Admin Profile</a>
          </h6>-->
    </div>
    <div class="card-body">
        <div class="table-reponsive">
            <table class="table table-bordered" id="database" with="100%" cellspacing="0">
                <thead>
                   <tr>
                    <th>No.</th>
                    <th>ID</th>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Title</th>
                    <th>Message</th>
                    <th>Move</th>
                   </tr>
                </thead>
                <tbody>
                    {% for ct in data %}
                   <tr>
                    <td>{{loop.index}}</td>
                    <td>{{ct.getId()}}</td>
                    <td>{{ct.getContactname()}}</td>
                    <td>{{ct.getContactemail()}}</td>
                    <td>{{ct.getContacttitle()}}</td>
                    <td>{{ct.getContactmessage()}}</td>
                    <td>
                        <a href="javascript:deletect('{{path('app_delete_contact',{'id':ct.getId()})}}')" class="btn btn-danger">DELETE</a>
                    </td>
                    </tr>
                </tbody>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
</div>

</div>
{% endblock %}
{% block javascripts %}
<script>
    function Logout(url){
        if(confirm("Do you want to sign out?")){
            window.location.href = url;
        }
    }
    </script>
    <script>
        function deletect(url){
            if(confirm("Do you delete contact?")){
                window.location.href = url;
            }
        }
        </script>
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('vendor/fontawesome-free/css/all.min.css')}}">
    <link rel="stylesheet" href="{{asset('css/admin.css')}}">
    <link rel="stylesheet" href="{{asset('https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')}}">
{% endblock %}
