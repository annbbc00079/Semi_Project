
{% extends 'adbase.html.twig' %}

{% block title %}Hello Note form!{% endblock %}

{% block body %}

<div calss="container-fluid ">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
        <h3>Page List Product
            <a href="{{path('app_san_pham')}}" class="btn btn-primary">ADD New Product</a>
        </h3>

   <table class="table table-bordered" id="database" with="100%" cellspacing="0">
    <thead>
        <tr>
            <td>No.</td>
            <td>ID Product</td>
            <td>Image</td>
            <td>Product name</td>
            <td>Price</td>
            <td>Product description</td>
            <td>Move</td>
        </tr>
    </thead>
    <tbody>
        {% for sp in data %}
        <tr>
        <td>{{loop.index}}</td>
        <td>{{sp.getId()}}</td>
        <td><img src="{{asset('uploads/sanpham/' ~ sp.getPhoto())}}" height="150"></td>
        <td>{{sp.getName()}}</td>
        <td>{{sp.getPrice()}}</td>
        <td>{{sp.getProductdescription()}}</td>
        
        <td>
            <a href="{{path('app_edit_san_pham',{'id':sp.getId()})}}" class="btn btn-success">Edit</a>
            <a href="javascript:deletesp('{{path('app_delete_san_pham',{'id':sp.getId()})}}')" class="btn btn-danger">Delete</a>
            <!--<form>
            <button type="submit" formmethod="post" formaction="{{path('app_cart_add',{'product_id':sp.getId()})}}">Add to cart</button>
            </form>-->
        </td>
    </tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
</div>
</div>
{% endblock %}
{% block javascripts %}
<script>
function deletesp(url){
    if(confirm("Do you delete product?")){
        window.location.href = url;
    }
}
</script>
<script>
    function Logout(url){
        if(confirm("Do you want to sign out?")){
            window.location.href = url;
        }
    }
    </script>
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('vendor/fontawesome-free/css/all.min.css')}}">
    <link rel="stylesheet" href="{{asset('css/admin.css')}}">
    <link rel="stylesheet" href="{{asset('https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')}}">
{% endblock %}

