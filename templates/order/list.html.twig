

{% extends 'adbase.html.twig' %}

{% block title %}Order manager
{% endblock %}

{% block body %}

                <!-- Begin Page Content -->
<div calss="container-fluid ">
    <div class="card shadow mb-4">     
		<div class="card-body">
			<div class="table-reponsive">
			<table class="table table-bordered" id="database" with="100%" cellspacing="0">
            <thead>
			<tr>
				<th>No.</th>
				<th>Customer Name</th>
				<th>Customer Address</th>
				<th>Customer Phone</th>
				<th>Total Price</th>
				
			</tr>
            </thead>
            <tbody>
			{% for order in data %}
        	<tr>
        		<td>{{loop.index}}</td>
       			<td>{{order.getCustomerName()}}</td>
        		<td>{{order.getCustomerAddress()}}</td>
        		<td>{{order.getCustomerPhone()}}</td>
				<td>{{order.getTotalPrice()}}</td>
				{# <td> #}
					{# <a href="{{path('app_order_dt')}}" class="btn btn-success ">Detail</a> #}
				{# </td> #}
			</tr>
			{% endfor %}
</tbody>
</table>
</div>
</div>
</div>
</div>

{% endblock %}
{% block javascripts %}
<script>
function deletesp(url){
    if(confirm("Do you delete product?")){
        window.location.href = url;
    }
}
</script>
<script>
    function Logout(url){
        if(confirm("Do you want to sign out?")){
            window.location.href = url;
        }
    }
    </script>
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

{% endblock %}
